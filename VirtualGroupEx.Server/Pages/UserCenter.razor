    <div class="col-12 col-md-6 my-2">
        <div class="card card-body shadow-sm">
            <ChangeNickNameCard></ChangeNickNameCard>
        </div>
    </div>
    <div class="col-12 col-md-6 my-2">
        <div class="card card-body shadow-sm">
            <ChangePasswordCard></ChangePasswordCard>
        </div>
    </div>
    <div class="col-12 col-md-6 my-2">
        <div class="card card-body shadow-sm">
            <LocalizationSelector></LocalizationSelector>
        </div>
    </div>
</div>

