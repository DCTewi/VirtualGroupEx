@page "/"
@namespace VirtualGroupEx.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
@inject Microsoft.Extensions.Localization.IStringLocalizer localizer
@inject VirtualGroupEx.Server.Services.PreferenceService Preference 

<!DOCTYPE html>
<html lang="zh-hans">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@((~Preference).AppTitle)</title>
    <base href="~/" />
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css" crossorigin="anonymous" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="VirtualGroupEx.Server.styles.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            @localizer["msg.blazorError.production"]
        </environment>
        <environment include="Development">
            @localizer["msg.blazorError.development"]
        </environment>
        <a href="" class="reload">@localizer["operation.reload"]</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/helper.js"></script>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
