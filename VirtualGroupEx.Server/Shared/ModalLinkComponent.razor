@code
{
    [Parameter] public RenderFragment ModalTitle { get; set; }
    [Parameter] public RenderFragment ModalBody { get; set; }
    [Parameter] public RenderFragment ModalButtonText { get; set; }
    [Parameter] public string ModalButtonClass { get; set; }

    private string RandomId = Math.Abs(Guid.NewGuid().GetHashCode()).ToString();
}

<a class="btn btn-link @ModalButtonClass" data-toggle="modal" data-target="#Modal@(RandomId)">
    @ModalButtonText
</a>

<div class="modal fade" id="Modal@(RandomId)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@ModalTitle</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @ModalBody
            </div>
        </div>
    </div>
</div>
